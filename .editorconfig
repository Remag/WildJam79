[*.cs]
csharp_space_after_keywords_in_control_flow_statements = false
csharp_space_between_parentheses = control_flow_statements, expressions

csharp_space_between_method_declaration_parameter_list_parentheses = true
csharp_space_between_method_call_parameter_list_parentheses = true
csharp_space_within_typeof_parentheses = true
csharp_space_within_default_parentheses = true
csharp_space_within_checked_parentheses = true
csharp_space_within_sizeof_parentheses = true
csharp_space_within_nameof_parentheses = true
csharp_space_within_new_parentheses = true

csharp_new_line_before_else = false
csharp_new_line_before_catch = false

csharp_new_line_before_open_brace = methods

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = none
